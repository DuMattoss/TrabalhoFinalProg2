<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controladores.ControladorGerenciarMotoristas"
            prefHeight="420.0" prefWidth="820.0">
    <children>
        <VBox spacing="8" layoutX="14" layoutY="14" prefWidth="792">
            <children>
                <Label text="Gerenciar Motoristas" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <TableView fx:id="tabela" prefHeight="260">
                    <columns>
                        <TableColumn fx:id="colNome" text="Nome" prefWidth="240"/>
                        <TableColumn fx:id="colCodigo" text="Código" prefWidth="120"/>
                        <TableColumn fx:id="colCnh" text="CNH" prefWidth="140"/>
                        <TableColumn fx:id="colSetor" text="Setor" prefWidth="160"/>
                    </columns>
                </TableView>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Nome:"/>
                        <TextField fx:id="tfNome" prefWidth="180"/>
                        <Label text="Código:"/>
                        <TextField fx:id="tfCodigo" prefWidth="120"/>
                        <Label text="CNH:"/>
                        <TextField fx:id="tfCnh" prefWidth="120"/>
                        <Label text="Setor:"/>
                        <TextField fx:id="tfSetor" prefWidth="120"/>
                        <Button text="Salvar alterações" onAction="#salvarAlteracoes"/>
                    </children>
                </HBox>

                <HBox spacing="10">
                    <children>
                        <Button text="Remover selecionado" onAction="#removerSelecionado"/>
                        <Button text="Atualizar" onAction="#atualizarTabela"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
